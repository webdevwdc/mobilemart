<% layout(layout_directory+'/mainLayout') -%>
    <section id="add-row">
        <div class="row">
            <div class="col-12">
                <div class="content-header">Permissions Lists For (
                    <%=response.role_info.roleDisplayName%>)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body collapse show">
                        <div class="card-block">
                            <form method="POST" action="<%= generateUrl('permission.update')%>" accept-charset="UTF-8" class="form-validate" novalidate="novalidate">
                                <div class="row">
                                    <div class="panel-body">
                                        <div class="card-block table-responsive">

                                            <% if(response.data){ %>
                                                <% for(var i=0; i< response.data.length; i++) { %>
                                                    <div class="row">

                                                        <div class="form-group col-md-12 mb-2">
                                                            <strong>
                                                                <%= utils.humanize(response.data[i]._id) %>
                                                            </strong>
                                                        </div>
                                                      
                                                        <% for(var y=0; y< response.data[i].permission_list.length; y++) { %>
                                                            <div class="form-group col-md-3 mb-2">
                                                                <span class="input-group">
                                                                    <input type="checkbox" value="<%= response.data[i].permission_list[y]._id %>" name="permissionall[]" <%=(response.data[i].permission_list[y].is_access)?
                                                                        "CHECKED": "" %> >
                                                                    <%= response.data[i].permission_list[y].displayName %>&nbsp;
                                                                </span>
                                                            </div>
                                                            <% } %>
                                                    </div>
                                                    <% }%>

                                                        <% } %>

                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions text-right pal">
                                    <input type="hidden" name="pid" value="<%=response.role_info._id%>">
                                    <a href="<%= generateUrl('role.list')%>">
                                        <button type="button" class="btn btn-raised btn-warning mr-1">
                                            <i class="ft-x"></i> Cancel
                                        </button>
                                    </a>
                                    <button type="submit" class="btn btn-primary">Save Permission</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>