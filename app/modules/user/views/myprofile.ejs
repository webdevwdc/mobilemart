<% layout(layout_directory+'/mainLayout') -%>
<div class="page-content">
        <div class="row">
            <% if(user) { %>
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                                <h4 class="card-title" id="basic-layout-tooltip">Edit Profile</h4>
                        </div>
                        <div class="card-body">
                            <div class="card-block">
                                <form action="<%= generateUrl('user.profileupdate')%>" method="post" class="form" novalidate>
                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            <label for="firstName" class="control-label">First Name</label>
                                            <div class="input-icon right controls">
                                                <input id="firstName" name="firstName" type="text" placeholder="Enter First Name" class="form-control" value="<%= response.data.firstName %>" required data-validation-required-message="This field is required"/>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6">
                                            <label for="lastName" class="control-label">Last Name</label>
                                            <div class="input-icon right controls">
                                                <input id="lastName" name="lastName" type="text" placeholder="Enter Last Name" class="form-control required lastName"
                                                    value="<%= response.data.lastName %>" />
                                            </div>
                                        </div>
                                    
                                        
                                </div>
                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            <label for="contactNumber" class="control-label">Phone Number</label>
                                            <div class="input-icon right controls">
                                                <input id="contactNumber" name="contactNumber" type="text" placeholder="Enter Phone Number" class="form-control allownumericwithdecimal" value="<%= response.data.contactNumber %>" required  pattern="^[ ()+]*([0-9][ ()+]*){10}$"/>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6">
                                            <label for="user_name" class="control-label">Email</label>
                                            <div class="input-icon right controls">
                                                <input id="email" name="email" type="text" placeholder="Enter Email" class="form-control required last_name"
                                                    value="<%= response.data.email %>" readonly />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-actions">
                                        <a href="<%= generateUrl('user.dashboard')%>" class="btn btn-raised btn-raised btn-warning mr-1">
                                            <i class="ft-x"></i> Cancel
                                        </a>

                                        <input id="_id" type="hidden" name="id" value="<%= user.id %>" />
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>